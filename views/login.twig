{% extends 'layout.twig' %}

{% block content %}
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6 mx-auto">

        <!-- form card login -->
          <div class="card rounded-5">
            <div class="card-header">
              <h3 class="mb-0">Login</h3>
            </div>
            <div class="card-body">
              <form class="form" method="POST" action="event.html">
                <div class="form-group">
                  <label for="user">User</label>
                  <input type="text" class="form-control form-control-lg rounded-5" name="user" id="user" required="">
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control form-control-lg" id="password" required="">
                </div>
                <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}