{% extends 'layout.twig' %}
{% block content %}
<div class="container-fluid">
	<div class="row my-2">
		{# Assitance #}
		<div class="col-12">
			<div class="card bg-light mt-3">
				<div class="card-header">
					<h4 class="card-title">{{ action }} | {{ section }}</h4>
				</div>
				<div class="card-body">
					<form method="post">
						<div class="form-row">
							<div class="col-md-6 mb-3">
								<label for="companyName">Company</label>

					      <select id="companyName" name="company_id" class="form-control rounded-0" required>
					        <option value="">Choose...</option>
					        {% for company in companiesData %}
					        	<option {% if invoiceData.company_id == company.company_id %}selected{% endif %} value="{{ company.company_id }}">{{ company.company_name }}</option>
							  	{% endfor %}
					      </select>
								
								<a href="{{ 'companies/new' | url }}" class="btn btn-info rounded-0"><i class="fas fa-plus-circle fa-lg"></i> Add Company</a>
							</div>
							<div class="col-md-6 mb-3">
								<label for="eventName">Event</label>
								<input type="text" class="form-control" id="event_id" value="{{ eventData.name }}" readonly>
								<input type="hidden" name="event_id" value="{{ eventData.id }}">
								<input type="hidden" name="invoice_id" value="{{ invoiceData.invoice_id }}">
							</div>
							<div class="col-md-4 mb-3">
								<label for="quote">Quote No.</label>
								<div class="input-group">
									<input type="text" class="form-control" name="invoice_no" id="quote" value="{{ invoiceData.invoice_no }}" placeholder="Quote No.">
								</div>
							</div>
							<div class="col-md-4 mb-3">
								<label for="quoteDate">Quote Date</label>
								<input type="date" class="form-control" name="invoice_date" id="quoteDate" value="{{ invoiceData.invoice_date }}" placeholder="Quote Date">
							</div>
							<div class="col-md-4 mb-3">
								<label for="file">File</label>
								<div class="input-group">
									{# here come the file link and options #}
									<input type="file" name="invoice_file" class="custom-file-input" id="file">
									<label class="custom-file-label" for="file">Upload File</label>
								</div>
							</div>
						</div>
						
						<button type="submit" class="btn btn-outline-info btn-lg btn-block rounded-0">Next Step (Items)</a>
					</form>		
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
