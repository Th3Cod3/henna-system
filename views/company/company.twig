{% extends 'layout.twig' %}
{% block content %}
<!-- COMPANY -->
{% if companiesData %}
<div class="card mt-5">
	<div class="card-header">
		<h3>Companies</h3>
	</div>
	<a href="{{ 'companies/new' | url }}" class="btn btn-outline-info btn-lg btn-block rounded-0">Add Company</a>
	<div class="card-body">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Name</th>
					<th scope="col">Address</th>
					<th scope="col">E-mail</th>
					<th scope="col">Contact Person</th>
					<th scope="col" class="text-right">Options</th>
				</tr>
			</thead>
			<tbody>
				{% for company in companiesData %}
					<tr>
						<td>{{ company.company_id }}</td>
						<td>{{ company.company_name }}</td>
						<td>{{ company.address }}</td>
						<td>{{ company.email }}</td>
						<td><img src="http://www.piachievers.com/img/users-male-2.png" class="rounded-circle border border-success" width="30" height="30" alt="profile img"> Yefri Gonzalez</td>
						<td class="text-right">
							<a href="{{ 'companies/edit/' | url }}{{ company.company_id }}"><i class="far fa-edit fa-lg"></i></a> |
							<a href="{{ 'companies/delete/' | url }}{{ company.company_id }}"><i class="fas fa-trash-alt"></i></a> 
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
{% else %}
	<div class="mt-5 text-center">
		<a href="{{ 'companies/new' | url }}" class="my-5">
			<i class="fas fa-plus-circle fa-5x"></i>
			<div class="h4 my-4">
				Add Company
			</div>
		</a>
	</div>
{% endif %}
{% endblock %}