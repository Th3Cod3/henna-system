{% extends 'layout.twig' %}
{% block content %}
{% if errors %}
  {% include 'messages/errors.twig' %}
{% endif %}
	<div class="container">
		<div class="row mt-5">
			<div class="col-12">
				<form method="post" enctype="multipart/form-data">
					<div class="card">
						<div class="card-header text-center">
							<h3>Add Person</h3>
							<div class="card-body text-left">
								<div class="row">
									
									<div class="col-md-6">
						      <a href="{{ 'people/new' | url }}" class="btn btn-info rounded-0"><i class="fas fa-plus-circle fa-lg"></i> Add Person</a>
										<select id="people" name="person_id" class="form-control rounded-0" required>
							        <option value="">Choose person</option>
								        {% for person in personsData %}
							        		<option value="{{ person.person_id }}">
								        		{{ person.firstname }} {{ person.lastname }}
								        	</option>
										  	{% endfor %}
							      </select>
									</div>

									<div class="col-lg-6 col-md-12">
										<div class="form-group">
									    <label for="user"><h5>User</h5></label>
									    <input type="text" class="form-control" id="user" value="" name="user" placeholder="User" required>
									  </div>
									</div>

									<div class="col-lg-6 col-md-12">
										<div class="form-group">
									    <label for="password"><h5>Password</h5></label>
									    <input type="password" class="form-control" id="password" value="" name="password" placeholder="Password" required>
									  </div>
									</div>

									<div class="col-lg-6 col-md-12">
										<div class="form-group">
									    <label for="password"><h5>Repeat Password</h5></label>
									    <input type="password" class="form-control" id="password" value="" name="password2" placeholder="Password" required>
									  </div>
									</div>

									<input type="submit" value="Create" class="btn btn-outline-info btn-lg btn-block rounded-0">
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}